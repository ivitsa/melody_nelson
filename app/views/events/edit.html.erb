<div id="header">Edit event</div>
<div class="linkedit">
	<%= link_to "Back", events_path %>
</div>
<div class="form">
<%= form_for @event, :html => {:multipart => 'true'} do |e| %>
	<table>
	<tr><td>Headline:</td><td><%= e.text_field :headline %></td></tr>
	<tr><td>Description:</td><td><%= e.text_area :description, size: "60x12" %></td></tr>
	<tr><td>Date and time:</td><td><%= e.datetime_select :time %></td></tr>
	<tr><td>Image:</td><td><%= e.file_field :image %></td></tr>
	<tr><td><%= e.submit "Update" %></td></tr>
	</table>
<% end %>
</div>
