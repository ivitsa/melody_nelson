<div id="header">Edit contact</div>
<div class="linkedit">
	<%= link_to "Back", contacts_path %>
</div>
<div class="form">
<%= form_for @contact do |c| %>
	<table>
	<tr><td>Name:</td><td><%= c.text_field :name %></td></tr>
	<tr><td>Address:</td><td><%= c.text_field :address %></td></tr>
	<tr><td>Phone:</td><td><%= c.text_field :phone %></td></tr>
	<tr><td>Email:</td><td><%= c.text_field :email %></td></tr>
	<tr><td>Opening hours:</td><td><%= c.text_field :opening_hours %></td></tr>
	<tr><td>Facebook:</td><td><%= c.text_field :facebook %></td></tr>
	<tr><td><%= c.submit "Update" %></td></tr>
	</table>
<% end %>
</div>

